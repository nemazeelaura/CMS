<h1>My POSTS</h1>
<!-- directs to partials form-msg.handlebars-->
<!-- {{> home/form-msg}}
 -->
<table class="table table-bordered">

	<thead>
		<tr>
			<th>Id</th>
			<th>File</th>
			<th>Title</th>
			<th>Status</th>
			<th>Category</th>
			<th>Allow Comments</th>
			<th>Date</th>
		</tr>
	</thead>

	<tbody>
        <!-- #each in handlebars is like for each loop-->
		{{#each posts}}
		<tr>
			<!-- handlebars brings variables with curly brackets -->
			<td>{{id}}</td>
			<!--shows image-->
			<td><img height="50" class="img-responsive" src="/uploads/{{file}}" alt="image"></td>
			<td>{{title}}</td>
			<td>{{status}}</td>
			<td>{{category.name}}</td>
			<td>{{allowComments}}</td>
			<td><a href="/post/{{id}}">View</a></td>
			<td>{{generateDate date 'MMMM Do YYYY'}}</td>
			<td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td> <!--button to edit post gets id-->
			<td>
				 <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
				 	<button type="submit" class="btn btn-danger">DELETE</button>
                 </form>

			</td>
		</tr>

		{{/each}}
	</tbody>


</table>