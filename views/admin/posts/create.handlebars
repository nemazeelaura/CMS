<h1>Create Post</h1>

{{#each errors}}

  <div class="alert alert-danger">
    {{message}}
  </div>



{{/each}}

<!--need enctype multipart form data to get upload-->
<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label for="title">Title</label>
        <!-- using boostrap classes -->
		<input required name="title" type="text" class="form-control" id="title" placeholder="Enter title" >
	</div>	
    <!--upload file-->
	<div class="form-group">
		<label for="file">File Upload</label>
		<input type="file" name="file" class="form-control">
	</div>	

   <div class="form-group">
	   <label for="category">Category</label>   
       <select name="category" id="category" class="form-control">   
        {{#each categories}}
            <!-- excepts id from Post model-->
       		<option value="{{id}}">{{name}}</option>
        {{/each}}
       </select>
	</div>

	<div class="form-group">
	   <label for="status">Status</label>   
       <select name="status" id="status" class="form-control">
       		<option value="public">Public</option>
       		<option value="private">Private</option>
       		<option value="draft">Draft</option>
       </select>
	</div>	


    <div class="form-check">
	   <label for="allowComments" class="form-check-label"> 
       <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments" >
          Allow Comments
       </label>  
	</div>	

	<div class="form-group">
		<label for="body">Body</label>
		<!--make text boxt bigger by adding col 30 rows 10 -->
		<textarea required name="body" cols="30" rows="10" class="form-control" id="body" placeholder="Enter description"></textarea>

	</div>	

    <!-- make button look better by adding class btn btn-primary -->
	<button type="Submit" class="btn btn-primary">Create Post</button>

</form>